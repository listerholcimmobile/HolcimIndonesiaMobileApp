<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="CustomDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">15dp</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="PinEditText" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/holcim_red</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">40sp</item>
        <item name="android:background">@drawable/pin_edit_shape</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:width">50dp</item>
        <item name="android:height">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLength">4</item>
        <item name="android:inputType">numberPassword</item>
    </style>

    <style name="HolcimWindowsTitleBackground" parent="*android:WindowTitleBackground">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>