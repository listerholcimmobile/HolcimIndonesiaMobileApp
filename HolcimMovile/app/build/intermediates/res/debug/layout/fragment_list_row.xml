<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/textView_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/common_content_info"
        android:textColor="@color/dark_grey"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView_field_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/common_content_info"
        android:textColor="@color/dark_grey"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/linearLayoutReasonForNotOrdering"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/textViewReasonForNotOrdering"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/common_content_info"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewReasonForNotOrderingValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/common_content_info"
            android:textColor="@color/dark_grey"
            android:textSize="15sp" />
    </LinearLayout>

</RelativeLayout><!-- From: file:/Users/maheshsukumar/AndroidStudioProjects/HolcimMovile/app/src/main/res/layout/fragment_list_row.xml -->