                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lbl_supplierNameValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/empty"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/lbl_BuyingPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/empty"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lbl_BuyingPriceValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/empty"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/lbl_SellingPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/empty"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lbl_SellingPriceValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/empty"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/lbl_Inventory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/empty"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lbl_InventoryValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/empty"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/lbl_lastMonthBuyingVolume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/empty"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lbl_lastMonthBuyingVolumeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/empty"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/lbl_lastMonthBuyingVolumeDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/empty"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <DatePicker
                android:id="@+id/datepicker_lastMonthBuyingVolumeDateValue"
                android:layout_width="wrap_content"
