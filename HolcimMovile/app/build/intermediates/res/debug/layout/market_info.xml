                android:textSize="15sp" />

            <TextView
                android:id="@+id/lbl_promotionStartDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/empty"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <DatePicker
                android:id="@+id/datepicker_promotionStartDateValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:scaleX="0.8"
                android:scaleY="0.8" />

            <TextView
                android:id="@+id/lbl_promotionEndDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/empty"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <DatePicker
                android:id="@+id/datepicker_promotionEndDateValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:scaleX="0.8"
                android:scaleY="0.8" />

            <TextView
                android:id="@+id/lbl_Program"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/empty"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lbl_ProgramValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/empty"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/lbl_programStartDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/empty"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <DatePicker
                android:id="@+id/datepicker_programStartDateValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:scaleX="0.8"
                android:scaleY="0.8" />

            <TextView
                android:id="@+id/lbl_programEndDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/empty"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <DatePicker
                android:id="@+id/datepicker_programEndDateValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:scaleX="0.8"
                android:scaleY="0.8" />

            <TextView
                android:id="@+id/lbl_issue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/empty"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lbl_issueValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/empty"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button_finish"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/confirm_button"
            android:contentDescription="@string/common_content_info"
            android:minWidth="100dp"
            android:text="@string/finish"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </RelativeLayout>

    <include
        android:id="@+id/linearlayout_footer"
        layout="@layout/footer" />

