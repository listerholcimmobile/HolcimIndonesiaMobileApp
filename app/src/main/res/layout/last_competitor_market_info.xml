<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/linearLayoutName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageButton_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/common_content_info"
            android:src="@drawable/home" />

        <TextView
            android:id="@+id/textView_fragment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/last_competitor_market_info"
            android:textColor="@color/holcim_red"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/linearLayoutName"
        android:layout_marginBottom="50dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/lbl_supplierName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/last_competitor_market_info_supplier_name"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/edt_supplierName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/lbl_lastBuyingPriceDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/last_competitor_market_info_Last_buying_price_date"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <DatePicker
                android:id="@+id/datePicker_lastBuyingPriceDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:scaleX="0.8"
                android:scaleY="0.8" />

            <TextView
                android:id="@+id/lbl_lastBuyingPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/last_competitor_market_info_Last_buying_price"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/edt_lastBuyingPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/lbl_lastSellingPriceDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/last_competitor_market_info_Last_selling_price_date"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <DatePicker
                android:id="@+id/datePicker_lastSellingPriceDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:scaleX="0.8"
                android:scaleY="0.8" />

            <TextView
                android:id="@+id/lbl_lastSellingPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/last_competitor_market_info_Last_selling_price"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/edt_lastSellingPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/lbl_lastInventoryDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/last_competitor_market_info_last_inventory_date"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <DatePicker
                android:id="@+id/datePicker_lastInventoryDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:scaleX="0.8"
                android:scaleY="0.8" />

            <TextView
                android:id="@+id/lbl_last_inventory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/last_competitor_market_info_last_inventory"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/edt_last_inventory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/lbl_lastBuyingVolumeDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/last_competitor_market_info_last_buying_volume_date"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <DatePicker
                android:id="@+id/datePicker_lastBuyingVolumeDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:scaleX="0.8"
                android:scaleY="0.8" />

            <TextView
                android:id="@+id/lbl_lastBuyingVolume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/last_competitor_market_info_last_buying_volume"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/edt_lastBuyingVolume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/lbl_promotion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/last_competitor_market_info_promotion"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/edt_promotion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/lbl_promotionStartDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/last_competitor_market_info_promotion_start_date"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <DatePicker
                android:id="@+id/datePicker_promotionStartDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:scaleX="0.8"
                android:scaleY="0.8" />

            <TextView
                android:id="@+id/lbl_promotionEndDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/last_competitor_market_info_promotion_end_date"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <DatePicker
                android:id="@+id/datePicker_promotionEndDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:scaleX="0.8"
                android:scaleY="0.8" />

            <TextView
                android:id="@+id/lbl_program"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/last_competitor_market_info_program"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/edt_program"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/lbl_programStartDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/last_competitor_market_info_program_start_date"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <DatePicker
                android:id="@+id/datePicker_programStartDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:scaleX="0.8"
                android:scaleY="0.8" />

            <TextView
                android:id="@+id/lbl_programEndDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/last_competitor_market_info_program_end_date"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <DatePicker
                android:id="@+id/datePicker_programEndDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:scaleX="0.8"
                android:scaleY="0.8" />
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/imageButton_back"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_alignParentLeft="true"
            android:background="@null"
            android:contentDescription="@string/common_content_info"
            android:scaleType="fitXY"
            android:src="@drawable/back" />

        <ImageButton
            android:id="@+id/imageButton_next"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:contentDescription="@string/common_content_info"
            android:scaleType="fitXY"
            android:src="@drawable/next" />
    </RelativeLayout>

    <include
        android:id="@+id/linearlayout_footer"
        layout="@layout/footer" />

</RelativeLayout>