<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/linearLayoutName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageButton_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/common_content_info"
            android:src="@drawable/home" />

        <TextView
            android:id="@+id/textView_fragment_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/contact_info_title"
            android:textColor="@color/holcim_red"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/linearLayoutName"
        android:layout_marginBottom="50dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView_first_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contact_first_name"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_first_name_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/common_content_info"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edt_first_name_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:inputType="text"
                android:singleLine="true"
                android:textSize="15sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textView_last_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contact_last_name"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_last_name_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/common_content_info"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edt_last_name_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:inputType="text"
                android:singleLine="true"
                android:textSize="15sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textView_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contact_gender"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_gender_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/common_content_info"
                android:textSize="15sp" />

            <Spinner
                android:id="@+id/spinner_gender_value"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:dropDownWidth="match_parent"
                android:spinnerMode="dropdown"
                android:textSize="15sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textView_birthdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contact_birthdate"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_birthdate_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/common_content_info"
                android:textSize="15sp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/edit_birthdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:inputType="date"
                android:singleLine="true"
                android:textSize="15sp" />

            <DatePicker
                android:id="@+id/datePicker_birthdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:scaleX="0.8"
                android:scaleY="0.8" />

            <TextView
                android:id="@+id/textView_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contact_phone"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_phone_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/common_content_info"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edt_phone_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:inputType="phone"
                android:singleLine="true"
                android:textSize="15sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textView_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contact_mobile"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_mobile_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/common_content_info"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edt_mobile_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:inputType="text"
                android:singleLine="true"
                android:textSize="15sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textView_extension"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contact_extension"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_extension_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/common_content_info"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edt_extension_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:inputType="text"
                android:singleLine="true"
                android:textSize="15sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textView_fax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contact_fax"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_fax_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/common_content_info"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edt_fax_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:inputType="text"
                android:singleLine="true"
                android:textSize="15sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textView_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contact_email"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_email_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/common_content_info"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edt_email_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:textSize="15sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textView_mailing_street"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contact_mailing_street"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_mailing_street_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/common_content_info"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edt_mailing_street_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:inputType="text"
                android:singleLine="true"
                android:textSize="15sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textView_mailing_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contact_mailing_city"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_mailing_city_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/common_content_info"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edt_mailing_city_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:inputType="text"
                android:singleLine="true"
                android:textSize="15sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textView_mailing_state_province"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contact_mailing_state_province"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_mailing_state_province_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/common_content_info"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edt_mailing_province_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:inputType="text"
                android:singleLine="true"
                android:textSize="15sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textView_mailing_postal_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contact_mailing_postal_code"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_mailing_postal_code_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/common_content_info"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edt_mailing_postal_code_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:inputType="text"
                android:singleLine="true"
                android:textSize="15sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textView_mailing_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contact_mailing_country"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_mailing_country_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/common_content_info"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edt_mailing_country_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:inputType="text"
                android:singleLine="true"
                android:textSize="15sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/lbl_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/picture"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/imageButton_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/confirm_button"
                android:contentDescription="@string/common_content_info"
                android:scaleType="fitCenter"
                android:src="@drawable/camera" />

            <TextView
                android:id="@+id/textView_nationality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contact_nationality"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_nationality_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/common_content_info"
                android:textSize="15sp" />

            <Spinner
                android:id="@+id/spinner_nationality"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:dropDownWidth="match_parent"
                android:spinnerMode="dropdown"
                android:textSize="15sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textView_account_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contact_account_id"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_account_id_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/empty"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView_account_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contact_account_name"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_account_name_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/common_content_info"
                android:textSize="15sp" />

            <Spinner
                android:id="@+id/spinner_account_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:dropDownWidth="match_parent"
                android:spinnerMode="dropdown"
                android:textSize="15sp"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/imageButton_back"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_alignParentLeft="true"
            android:background="@null"
            android:contentDescription="@string/common_content_info"
            android:scaleType="fitXY"
            android:src="@drawable/back" />

        <Button
            android:id="@+id/button_save"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="@drawable/confirm_button"
            android:contentDescription="@string/common_content_info"
            android:minWidth="100dp"
            android:text="@string/save"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:visibility="gone" />
    </RelativeLayout>

    <include
        android:id="@+id/linearlayout_footer"
        layout="@layout/footer" />

</RelativeLayout>